
<div class="container">
   <h1>New Project</h1>
   <% if @project.errors.any? %>
    <ol>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%=  msg %></li>
      <% end %>
    </ol>
  <% end %>

          <%= bootstrap_form_for @project do |f| %>
            <%= f.text_field :organisation, :required => true %>
            <%= f.text_field :name, :required => true %>
            <%= f.text_area :description, :required => true %>
            <%= f.submit "Next" %>
          <% end %>
</div>
